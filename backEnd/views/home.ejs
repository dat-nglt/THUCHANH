<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    background-color: #fff;
  }

  th {
    background-color: #4caf50; /* Màu nền cho tiêu đề */
    color: white; /* Màu chữ cho tiêu đề */
    padding: 10px;
    text-align: center;
  }

  td {
    border: 1px solid #dddddd; /* Kẻ ô cho các ô */
    padding: 8px;
    text-align: center;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2; /* Màu nền cho hàng chẵn */
  }

  tr:hover {
    background-color: #ddd; /* Màu nền khi di chuột qua hàng */
  }
</style>

<a
  href="http://localhost:8080/add-user-page"
>
  <div
    class="d-grid gap-2 d-md-flex justify-content-md-end"
  >
    <button
      class="btn btn-primary me-md-2"
      type="button"
    >
      Thêm người dùng
    </button>
  </div>
</a>
<table>
  <thead>
    <th>STT</th>
    <th>Username</th>
    <th>Fullname</th>
    <th>Address</th>
    <th>Setting</th>
  </thead>

  <tbody>
    <% for(let i = 0; i <
    data.rows.length; i++) {%>

    <tr>
      <td scope="row"><%= i+1 %></td>
      <td>
        <%= data.rows[i].username %>
      </td>
      <td>
        <%= data.rows[i].fullname %>
      </td>
      <td>
        <%= data.rows[i].address %>
      </td>
      <td>
        <div
          style="
            display: flex;
            gap: 15px;
            justify-content: center;
          "
        >
          <a href="">
            <i
              class="fa-solid fa-eye"
              style="color: #74c0fc"
            ></i>
          </a>
          <a href="">
            <i
              class="fa-solid fa-pen-to-square"
              style="color: #74c0fc"
            ></i>
          </a>
          <a
            href="http://localhost:8080/delete-user/<%= data.rows[i].id %>"
          >
            <i
              class="fa-solid fa-trash"
              style="color: #a80000"
            ></i>
          </a>
        </div>
      </td>
    </tr>
    <%}%>
  </tbody>
</table>
